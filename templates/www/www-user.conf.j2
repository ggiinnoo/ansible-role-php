; {{ ansible_managed }}
[{{ item.name }}]
user = {{ item.name }}
group = {{ item.name }}

listen.owner = {{ item.name }}
{% if webService is "httpd" %} listen.group = apache {% endif %}
{% if webService is "nginx" %} listen.group = nginx {% endif %}
listen.mode = 0660
listen = /var/run/{{ phpversion }}-fpm-{{ item.name }}.sock

pm = ondemand
pm.max_children = 100
pm.status_path = /phpfpm-status
