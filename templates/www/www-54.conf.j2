; {{ ansible_managed }}
[www]

user = {{ php54.fpm.fpmUser | default ("apache") }}
group = {{ php54.fpm.fpmGroup | default ("apache") }}

listen.owner = {{ php54.fpm.fpmListenOwner | default ("nobody") }}
listen.group = {{ php54.fpm.fpmListenGroup | default ("nobody") }}
listen.mode = {{ php54.fpm.fpmListenMode | default ("0660") }}

listen = {{ php54.fpm.fpmSock | default("/var/run/php54-fpm.sock") }}

listen.allowed_clients = {{ php54.fpm.fpmListenAllowedClients | default ("127.0.0.1") }}

pm = ondemand
pm.max_children = 100
pm.status_path = /phpfpm-status

slowlog = {{ php54.fpm.fpmSlowLog | default ("/opt/remi/php54/root/var/log/php-fpm/www-slow.log") }}

php_admin_value[error_log] = {{ php54.fpm.fpmErrorLog | default ("/opt/remi/php54/root/var/log/php-fpm/www-error.log") }}
php_admin_flag[log_errors] = on

php_value[session.save_handler] = {{ php54.fpm.fpmSessionSaveHandler | default ("files") }}
php_value[session.save_path]    = {{ php54.fpm.fpmSessionsavePath | default ("/opt/remi/php54/root/var/lib/php/session") }}
php_value[soap.wsdl_cache_dir]  = {{ php54.fpm.fpmSessionSaveCache | default ("/opt/remi/php54/root/var/lib/php/wsdlcache") }}
